<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <include
            android:id="@+id/mainTitle"
            layout="@layout/item_glibal_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/TitleBoxY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
            android:id="@+id/textView_questionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question_content"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_questionNum"
            app:layout_constraintStart_toStartOf="@+id/textView_questionNum"
            app:layout_constraintEnd_toEndOf="@+id/textView_questionNum"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"/>

    <ListView
            android:id="@+id/listView_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView_questionContent"
            app:layout_constraintStart_toStartOf="@+id/textView_questionContent"
            app:layout_constraintEnd_toEndOf="@+id/textView_questionContent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.51">

    </ListView>



</android.support.constraint.ConstraintLayout>