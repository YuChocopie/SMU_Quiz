<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout_wrong_note"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white5"
        tools:context=".worng.WrongNoteActivity"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".SubjectActivity">
        <include
                android:id="@+id/wrong_note_global_title"
                layout="@layout/item_global_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <android.support.v4.widget.NestedScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/wrong_note_global_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <TextView

                        android:id="@+id/tvWorngNoteSubjectAlgorithm"
                        android:layout_width="wrap_content"
                        android:layout_height="53dp"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:text="@string/wrong_problem"
                        android:textColor="@color/black0"
                        android:letterSpacing="0.05"
                        app:layout_constraintStart_toStartOf="@+id/vWorngNoteAlgorithm"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                />
                <View
                        android:id="@+id/vWorngNoteAlgorithm"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray1"
                        app:layout_constraintTop_toBottomOf="@+id/tvWorngNoteSubjectAlgorithm"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/activity_margin20"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/activity_margin20"/>
                <android.support.v7.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/rvWorngAlgorithm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/vWorngNoteAlgorithm"
                        app:layout_constraintBottom_toTopOf="@id/tvWorngNoteSubjectDatabase"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_chainStyle="spread_inside">
                </android.support.v7.widget.RecyclerView>

                <TextView
                        android:id="@+id/tvWorngNoteSubjectDatabase"
                        android:layout_width="wrap_content"
                        android:layout_height="53dp"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:text="@string/wrong_problem"
                        android:textColor="@color/black0"
                        android:letterSpacing="0.05"
                        app:layout_constraintStart_toStartOf="@+id/vWorngNoteAlgorithm"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/rvWorngAlgorithm"/>
                <View
                        android:id="@+id/vWorngNoteDatabase"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray1"
                        app:layout_constraintTop_toBottomOf="@+id/tvWorngNoteSubjectDatabase"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/activity_margin20"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/activity_margin20"/>
                <android.support.v7.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/rvWorngDatabase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/vWorngNoteDatabase"
                        app:layout_constraintBottom_toTopOf="@id/tvWorngNoteSubjectSoftwareEngineering"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_chainStyle="spread_inside">
                </android.support.v7.widget.RecyclerView>


                <TextView
                        android:id="@+id/tvWorngNoteSubjectSoftwareEngineering"
                        android:layout_width="wrap_content"
                        android:layout_height="53dp"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:text="@string/wrong_problem"
                        android:textColor="@color/black0"
                        android:letterSpacing="0.05"
                        app:layout_constraintStart_toStartOf="@+id/tvWorngNoteSubjectAlgorithm"
                        app:layout_constraintTop_toBottomOf="@id/rvWorngDatabase"
                />
                <View
                        android:id="@+id/vWorngNoteSoftwareEngineering"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray1"
                        app:layout_constraintTop_toBottomOf="@+id/tvWorngNoteSubjectSoftwareEngineering"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/activity_margin20"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/activity_margin20"/>
                <android.support.v7.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/rvWorngSoftwareEngineering"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/vWorngNoteSoftwareEngineering"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                </android.support.v7.widget.RecyclerView>

                <TextView
                        android:id="@+id/tvWorngNoteSubjectOperationSystem"
                        android:layout_width="wrap_content"
                        android:layout_height="53dp"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif"
                        android:text="@string/wrong_problem"
                        android:textColor="@color/black0"
                        android:letterSpacing="0.05"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/vWorngNoteAlgorithm"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/rvWorngSoftwareEngineering"/>
                <View
                        android:id="@+id/vWorngNoteOperationSystem"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray1"
                        app:layout_constraintTop_toBottomOf="@+id/tvWorngNoteSubjectOperationSystem"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/activity_margin20"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/activity_margin20"/>
                <android.support.v7.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/rvWorngOperationSystem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/vWorngNoteOperationSystem"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                </android.support.v7.widget.RecyclerView>

                <TextView
                        android:id="@+id/tvWorngNoteSubjectComputerNetwork"
                        android:layout_width="wrap_content"
                        android:layout_height="53dp"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif"
                        android:text="@string/wrong_problem"
                        android:textColor="@color/black0"
                        android:letterSpacing="0.05"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/vWorngNoteAlgorithm"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/rvWorngOperationSystem"/>
                <View
                        android:id="@+id/vWorngNoteComputerNetwork"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray1"
                        app:layout_constraintTop_toBottomOf="@+id/tvWorngNoteSubjectComputerNetwork"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/activity_margin20"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/activity_margin20"/>
                <android.support.v7.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/rvWorngComputerNetwork"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/vWorngNoteComputerNetwork"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                </android.support.v7.widget.RecyclerView>

                <TextView
                        android:id="@+id/tvWorngNoteSubjectComputerStructure"
                        android:layout_width="wrap_content"
                        android:layout_height="53dp"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif"
                        android:text="@string/wrong_problem"
                        android:textColor="@color/black0"
                        android:letterSpacing="0.05"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/vWorngNoteAlgorithm"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/rvWorngComputerNetwork"/>
                <View
                        android:id="@+id/vWorngNoteComputerStructure"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray1"
                        app:layout_constraintTop_toBottomOf="@+id/tvWorngNoteSubjectComputerStructure"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/activity_margin20"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/activity_margin20"/>
                <android.support.v7.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/rvWorngComputerStructure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/vWorngNoteComputerStructure"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                </android.support.v7.widget.RecyclerView>

                <TextView
                        android:id="@+id/tvWorngNoteSubjectDataStructure"
                        android:layout_width="wrap_content"
                        android:layout_height="53dp"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif"
                        android:text="@string/wrong_problem"
                        android:textColor="@color/black0"
                        android:letterSpacing="0.05"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/vWorngNoteAlgorithm"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/rvWorngComputerStructure"/>
                <View
                        android:id="@+id/vWorngNoteDataStructure"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray1"
                        app:layout_constraintTop_toBottomOf="@+id/tvWorngNoteSubjectDataStructure"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/activity_margin20"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/activity_margin20"/>
                <android.support.v7.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/rvWorngDataStructure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/vWorngNoteDataStructure"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                </android.support.v7.widget.RecyclerView>
            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.constraint.ConstraintLayout>
    <android.support.design.widget.NavigationView
            android:id="@+id/nav_view_wrong_note"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header_main"
            app:menu="@menu/activity_main_drawer"/>
</android.support.v4.widget.DrawerLayout>