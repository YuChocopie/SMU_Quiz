<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_margin20"
        android:paddingEnd="@dimen/activity_margin20"
        android:background="@color/white5">

    <TextView
            android:layout_marginTop="12dp"
            android:id="@+id/tvWorngNoteQuizNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/black0"
            android:text="@string/question"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:letterSpacing="0.01"
            android:background="@drawable/code_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWorngNoteQuizNum">

    <TextView
            android:id="@+id/tvWorngNoteQuizText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black0"
            android:letterSpacing="0.01"
            android:text="문제내용1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/tvWorngNoteQuizText2"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black2"
                android:letterSpacing="0.01"
                android:text="문제내용1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvWorngNoteQuizText1"/>
        <TextView
                android:id="@+id/tvWorngNoteQuizText3"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black2"
                android:letterSpacing="0.01"
                android:text="문제내용3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvWorngNoteQuizText2"/>
        <TextView
                android:id="@+id/tvWorngNoteQuizText4"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black2"
                android:letterSpacing="0.01"
                android:text="문제내용4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvWorngNoteQuizText3"/>
        <TextView
                android:id="@+id/tvWorngNoteQuizAnswer"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black2"
                android:letterSpacing="0.01"
                android:text="@string/answer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvWorngNoteQuizText4"/>
        <TextView
                android:id="@+id/tvWorngNoteQuizExplain"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black2"
                android:letterSpacing="0.01"
                android:text="해설"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvWorngNoteQuizAnswer"/>

</android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>

